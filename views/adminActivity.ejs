<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <title>Admin Activity Log</title>
</head>
<body>
<%- include('partials/header', { userName: userName }) %>
<%- include('partials/menu', { userName: userName, cart: cart }) %>

<div class="container mt-4">
    <h1>User Activity Log</h1>
    <input type="text" id="usernameFilter" class="form-control" placeholder="Filter by username prefix">
    <button id="applyFilter" class="btn btn-primary mt-2">Apply Filter</button>
    <table class="table mt-4">
        <thead>
        <tr>
            <th>Date & Time</th>
            <th>Username</th>
            <th>Activity Type</th>
        </tr>
        </thead>
        <tbody id="activityTableBody">
        <% activities.forEach(activity => { %>
            <tr>
                <td><%= new Date(activity.datetime).toLocaleString() %></td>
                <td><%= activity.username %></td>
                <td><%= activity.type %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function() {
        $('#applyFilter').click(function() {
            var usernamePrefix = $('#usernameFilter').val();
            window.location.href = '/admin/activity?username=' + usernamePrefix;
        });
    });
</script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
