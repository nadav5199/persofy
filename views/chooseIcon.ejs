<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <title>Choose Your Icon</title>
</head>
<body>
<%- include('partials/header', { userName: userName }) %>
<%- include('partials/menu', { userIcon: userIcon, userName: userName, cart: cart }) %>
<% const potter = "https://upload.wikimedia.org/wikipedia/en/d/d7/Harry_Potter_character_poster.jpg" %>
<% const hermione = "https://upload.wikimedia.org/wikipedia/en/thumb/d/d3/Hermione_Granger_poster.jpg/220px-Hermione_Granger_poster.jpg" %>
<% const gollum = "https://static.posters.cz/image/1300/art-photo/the-lord-of-the-rings-gollum-i119511.jpg" %>
<% const darth = "https://i.pinimg.com/474x/51/e3/7c/51e37c2b688170cdc07888eba287bfd1.jpg" %>
<div class="container mt-4">
    <h1>Choose Your Icon</h1>
    <div class="icon-container">
        <img src="<%= potter %>" alt="Icon 1" class="icon-choice" onclick="selectIcon('<%= potter %>')">
        <img src="<%= hermione %>" alt="Icon 2" class="icon-choice" onclick="selectIcon('<%= hermione %>')">
        <img src="<%= gollum %>" alt="Icon 3" class="icon-choice" onclick="selectIcon('<%= gollum %>')">
        <img src="<%= darth %>" alt="Icon 4" class="icon-choice" onclick="selectIcon('<%= darth %>')">
    </div>
</div>
<form id="iconForm" action="/choose-icon" method="POST" style="display: none;">
    <input type="hidden" name="icon" id="iconInput">
</form>

<script>
    function selectIcon(icon) {
        document.getElementById('iconInput').value = icon;
        document.getElementById('iconForm').submit();
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>
</html>
