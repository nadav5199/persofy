<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Select Your Favorite Genres</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/genre.css">
</head>
<body>
<%- include('partials/header') %>
<%- include('partials/menu',{userIcon: userIcon,userName: userName, cart: cart }) %>

<div class="container mt-4">
    <h1 class="text-center mb-4">Select Your Favorite Genres</h1>
    <form action="/genres" method="POST" id="genreForm">
        <div class="genre-grid">
            <% genres.forEach(genre => { %>
                <div class="genre-card" data-genre="<%= genre %>">
                    <input type="checkbox" id="<%= genre %>" name="favoriteGenres" value="<%= genre %>" class="genre-checkbox">
                    <label for="<%= genre %>" class="genre-label"><%= genre %></label>
                </div>
            <% }) %>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
<script>
    document.querySelectorAll('.genre-card').forEach(card => {
        card.addEventListener('click', function() {
            this.classList.toggle('selected');
            const checkbox = this.querySelector('input[type="checkbox"]');
            checkbox.checked = !checkbox.checked;
        });
    });
</script>
</body>
</html>