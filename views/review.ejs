<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Review Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/review.css">
</head>
<body>
<%- include('partials/header') %>
<%- include('partials/menu',{userIcon: userIcon,userName: userName ,cart: cart}) %>
<div class="container mt-5">
    <h1 class="mb-4">Rate Your Movies</h1>
    <form action="/review" method="POST">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 justify-content-center">
            <% movies.forEach(movie => { %>
                <div class="col">
                    <div class="card h-100">
                        <img src="<%= movie.posterUrl %>" class="card-img-top movie-poster" alt="<%= movie.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.name %></h5>
                            <div class="star-rating" data-movie-id="<%= movie._id %>">
                                <span class="star" data-value="5">★</span>
                                <span class="star" data-value="4">★</span>
                                <span class="star" data-value="3">★</span>
                                <span class="star" data-value="2">★</span>
                                <span class="star" data-value="1">★</span>
                            </div>
                            <input type="hidden" name="reviews[<%= movie._id %>]" value="0">
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit Reviews</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/review.js"></script>
</body>
</html>